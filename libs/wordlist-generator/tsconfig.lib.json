{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "target": "ES2022",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "lib": ["dom", "es2022"],
    "useDefineForClassFields": false,
    "moduleResolution": "bundler"
  },
  "exclude": ["src/test-setup.ts", "**/*.spec.ts", "jest.config.ts"],
  "include": ["**/*.ts"]
}
